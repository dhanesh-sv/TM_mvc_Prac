
@{
    ViewBag.Title = "AddCountry";
    Layout = "~/Views/Shared/_Masterpage.cshtml";
}
@model TM_mvc.Models.country

@*<h2>AddCountry</h2>*@
<div class="container">

    <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Add Country</div>

            </div>
            <div class="panel-body">
                @using (Html.BeginForm("SaveCountry", "Country", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div id="div_id_country_code" class="form-group required">
                        <label for="id_country_code" class="control-label col-md-4  requiredField"> Country Code<span class="asteriskField">*</span> </label>
                        <div class="controls col-md-8 ">
                            @Html.TextBoxFor(model => model.country_code, new { id = "txt_country_code", @class = "input-md textinput textInput form-control", maxlength = "10", style = "margin-bottom: 10px", placeholder = "Country Code" })

                        </div>
                    </div>
                    <div id="div_id_country_name" class="form-group required">
                        <label for="id_country_name" class="control-label col-md-4  requiredField">Country Name<span class="asteriskField">*</span> </label>
                        <div class="controls col-md-8 ">
                            @Html.TextBoxFor(model => model.country_name, new { id = "id_country_name", @class = "input-md textinput textInput form-control", placeholder = "Country Name", style = "margin-bottom: 10px" })

                        </div>
                    </div>


                    <div class="form-group">
                        <div class="aab controls col-md-4 "></div>
                        <div class="controls col-md-8 ">
                            <input type="submit" name="btn_Save" value="Save" class="btn btn-primary btn btn-info" id="submit-id-save" />
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>




